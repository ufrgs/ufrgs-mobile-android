<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryColorDark</item>
        <item name="colorAccent">@color/primaryColorAccent</item>

        <item name="colorButtonNormal">@color/primaryColorDark</item>
        <item name="colorControlHighlight">@color/white</item>
        <item name="android:textColor">@color/chumbo</item>
        <item name="android:textColorHint">@color/grey_very_dark</item>
        <item name="android:windowSharedElementsUseOverlay" tools:targetApi="lollipop">false</item>

    </style>

    <style name="ButtonWhite" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorButtonNormal">@color/white</item>
        <item name="colorControlHighlight">@color/primaryColor</item>
        <item name="android:textColor">@color/primaryColor</item>
    </style>

    <!-- Style das abas -->
    <style name="TabLayout" parent="Widget.Design.TabLayout">
        <item name="android:background">@color/secondRed</item>
        <item name="tabIndicatorColor">@color/white</item>
        <item name="tabSelectedTextColor">@color/white</item>
    </style>

    <!-- Style para o share ficar branco na toolbar -->
    <style name="ToolbarStyle" parent="@style/ThemeOverlay.AppCompat.Light">
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
    </style>

    <!-- Style para os forms -->
    <style name="FormStyle" parent="AppTheme">
        <item name="colorControlNormal">@color/grey_very_dark</item>
        <item name="colorControlActivated">@color/grey_very_dark</item>
        <item name="colorControlHighlight">@color/grey_very_dark</item>
    </style>

    <style name="Theme.AppCompat.Light.NoActionBar.FullScreen" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="menu_labels_style">
        <item name="android:background">@drawable/fab_label_background</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="UfrgsTheme" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/ufrgs.colorPrimary</item>
        <item name="colorPrimaryDark">@color/ufrgs.colorPrimaryDark</item>
        <item name="colorAccent">@color/ufrgs.colorAccent</item>
        <item name="android:textColorPrimary">@color/ufrgs.primaryText</item>
        <item name="android:textColorSecondary">@color/ufrgs.secondaryText</item>
        <item name="android:textColorHint">@color/ufrgs.primaryText</item>

        <item name="android:actionBarStyle">@style/UfrgsTheme.ActionBar</item>

        <item name="android:alertDialogTheme">@style/UfrgsTheme.Dialog</item>
    </style>

    <style name="UfrgsTheme.NoActionBar" parent="UfrgsTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="UfrgsTheme.EditText" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/ufrgs.colorPrimary</item>
        <item name="colorControlActivated">@color/ufrgs.colorAccent</item>
        <item name="colorControlHighlight">@color/ufrgs.colorAccent</item>
    </style>

    <style name="UfrgsTheme.ActionBar" parent="@android:style/Widget.ActionBar">
        <item name="android:titleTextStyle">@style/UfrgsTheme.ActionBar.TextStyle</item>
    </style>

    <style name="UfrgsTheme.ActionBar.TextStyle" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/ufrgs.white</item>
    </style>

    <style name="UfrgsTheme.Dialog">
        <item name="android:editTextStyle">@style/UfrgsTheme.EditText</item>
    </style>

    <style name="error_appearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/mainRed</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Translucent" parent="AppTheme">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
    </style>

    <style name="OwlHelpText" parent="@android:style/TextAppearance">
        <item name="android:textColor">#888888</item>
        <item name="android:textSize">15dp</item>
        <item name="android:lineSpacingMultiplier">1.15</item>
        <item name="android:gravity">center</item>
    </style>

</resources>
