<androidx.appcompat.widget.Toolbar
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="?attr/actionBarSize"
    android:layout_width="match_parent"
    android:background="@color/mainRed"
    app:layout_scrollFlags="scroll|enterAlways"
    android:elevation="6dp"
    app:theme="@style/ToolbarStyle"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/toolbar.icon"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_flame"
            />

        <ImageView
            android:id="@+id/ticket_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_tickets2"
            android:layout_marginRight="16dp"
            android:padding="4dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="?selectableItemBackground"
            android:backgroundTint="@color/mainRed"
            android:contentDescription="Verificar Tickets do RU"
            android:visibility="gone"
            />

    </RelativeLayout>

</androidx.appcompat.widget.Toolbar>
